<label for "album_name">Album Name:</label>
<input type="text" name="album[name]" id="album_name"
				value="<%= @blank.name%>">
<br />

<label for "album_artist">Album Artist:</label>
<select name="album[band_id]" id="album_artist"> <br />
	<% @bands.each do |band| %>
		<option value="<%= band.id %>"
			<%= "selected=\"selected\"" if @blank.band == band %>>
			<%= band.name %>
		</option>
	<% end %>
</select> <br />

<label for "live">Live</label>
<input type="radio" name="album[recording]" id="live" value="Live"
<%= "checked=\"checked\"" if @blank.recording == 'Live' %>	>
<label for "studio">Studio</label>
<input type="radio" name="album[recording]" id="studio" value="Studio"
<%= "checked=\"checked\"" if @blank.recording == 'Studio' %>	>
<br />